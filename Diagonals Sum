/*Diagonals sum.both diagonals .commaon value cannot be added again*/

#include<stdio.h>
#include <stdlib.h>

int main()
{
int n,a[20][20];
int sum=0,i,j,s=0;
int k;
scanf("%d",&n);
for(i=0;i<n;i++)
{
    for(j=0;j<n;j++)
    {
        scanf("%d ",&a[i][j]);
    }
    
}
for(i=0;i<n;i++)
{
   
        
        sum=sum+a[i][i];
        k=n-i-1;
        if(i!=k)
        s=s+a[i][k]; 
       
}


printf("%d",sum+s);


}
